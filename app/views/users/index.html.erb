<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users" class="model-container ">
  <% @users.each do |user| %>
    <%= link_to user, class: "model-item user-item" do %>
      <img src="https://cdn-icons-png.flaticon.com/512/1946/1946429.png" alt="default-user-icon">
      <div>
        <h2> <%= user.email %> </h2>
        <p><strong>By: </strong></p>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to "New user", new_user_path, class: "btn btn-primary" %>
