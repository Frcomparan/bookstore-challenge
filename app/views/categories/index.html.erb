<h1>Categories</h1>

<%= link_to new_category_path, class: "btn btn-primary btn-add" do %>
  <i class="fas fa-plus"></i>
  <span class="btn-add-text">Add new category</span>
<% end %>

<div id="categories" class="model-container">
  <% @categories.each do |category| %>
    <%= link_to category, class: "model-item" do %>
      <figure>
        <img src="https://cdn.icon-icons.com/icons2/827/PNG/512/stack_icon-icons.com_66542.png" alt="default-category-icon">
      </figure>
      <div>
        <h2> <%= category.name %> </h2>
      </div>
    <% end %>
  <% end %>
</div>

<%== pagy_nav(@pagy) %>

