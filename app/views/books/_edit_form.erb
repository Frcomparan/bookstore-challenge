<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :author, style: "display: block" %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :release_date, style: "display: block" %>
    <%= form.datetime_field :release_date %>
  </div>

  <%= form.fields_for :book_category, book.book_category do |book_category| %>
    <div>
      <%= book_category.hidden_field :id %>
      <%= book_category.check_box :_destroy %> Eliminar
      <%= book_category.label :category_id, 'Seleccione una categorÃ­a para el libro' %>
      <%= book_category.collection_select :category_id, Category.order(:name), :id, :name %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
