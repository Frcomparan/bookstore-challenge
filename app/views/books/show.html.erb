<div class="show-container">
  <p style="color: green"><%= notice %></p>

  <%= render @book %>

  <div class="btn-options">
    <%= link_to "Edit this book", edit_book_path(@book), class: "btn btn-success" %>
    <%= button_to "Destroy this book", @book, class: "btn btn-danger", method: :delete %>
    <%= link_to "Back to books", books_path, class: "btn btn-secondary" %>
  </div>
</div>
